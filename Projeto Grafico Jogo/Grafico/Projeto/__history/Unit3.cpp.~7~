//---------------------------------------------------------------------------
void __fastcall TForm3::FormCreate(TObject *Sender)
{
	Image1->Hide();
	Image2->Hide();
	Image3->Hide();
	Image4->Hide();
	Image5->Hide();

	if(Classe == 1){
		Image1->Show();
	}
	else if(personagens[0].Classe == 2){
		Image2->Show();
	}
	else if(personagens[0].Classe == 3){
		Image3->Show();
	}
	else if(personagens[0].Classe == 4){
		Image4->Show();
	}
	else if(personagens[0].Classe == 5){
		Image5->Show();
	}
}
